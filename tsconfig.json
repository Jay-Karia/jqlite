{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "moduleDetection": "force",
    "strict": true,
    "lib": ["es2022", "dom"],
    "baseUrl": "./src",
    "paths": {
      "@lib/*": ["lib/*"],
      "@utils/*": ["utils/*"],
      "@constants/*": ["constants/*"],
      "types/*": ["./@types/*"]
    }
  },
  "include": ["src"],
  "exclude": ["./dist/**/*", "eslint.config.mjs"]
}
