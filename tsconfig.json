{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "moduleDetection": "force",
    "strict": true,
    "lib": ["es2022", "dom"],
    "baseUrl": "./",
    "emitDeclarationOnly": true,
    "declaration": true,
    "module": "ES2022",
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "Node"
  },
  "include": ["src"],
  "exclude": ["./dist/**/*", "eslint.config.mjs"]
}
